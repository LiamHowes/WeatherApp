<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    tools:context=".addingLocation">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/adding_location_toolbar"
        android:layout_width="0sp"
        android:layout_height="60sp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:maxHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="200sp"
                    android:layout_marginBottom="10sp"
                    android:hint="@string/search"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/round"
                    android:paddingStart="20sp"
                    android:textSize="30sp"
                    android:layout_gravity="top"
                    android:inputType="text"
                    android:autofillHints="true"
                    android:onClick="search"
                    />
                <Button
                    android:id="@+id/search_button"
                    android:onClick="search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:layout_marginTop="190sp"
                    android:layout_marginBottom="10sp"
                    android:padding="10sp"
                    android:background="@drawable/ic_baseline_search_24"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Enter a City Name, or a City Name Followed By a Comma and Country Code (No Spaces)."
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="E.g search: 'London'\n or \n search: 'London,uk'"
                android:textSize="24sp"
                />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>